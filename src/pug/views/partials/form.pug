extends ../layouts/index
block variables 
	- var title = title
	- var title2 = title2
	- var goToPage = goToPage
	- var goToPageUrl = goToPageUrl

block content
	form(class="d-flex flex-column justify-content-start align-items-center w-50 h-50 m-auto bg-dark py-3 text-white"
		action="/api/products"
		method="POST")

		div(class="form-group w-75 mb-4 mt-3")
			label(for="title") Title
			input(class="form-control" type="text" name="title" id="title" placeholder="Title...")
		

		div(class="form-group w-75 mb-4")
			label(for="price") Price
			input(class="form-control" type="number" name="price" id="price" placeholder="Price...")
		

		div(class="form-group w-75 mb-4")
			label(or="imageUrl") Image URL
			input(class="form-control" type="url" name="imageUrl" id="imageUrl" placeholder="Thumbnail...")
		

		div(class="d-flex justify-content-center mt-5")
			button(class="btn btn-primary" type="submit") Add Product
	
