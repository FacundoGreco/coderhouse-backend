<form
	class="addProducts d-flex flex-column justify-content-start align-items-center w-75 m-auto bg-dark py-3 text-white"
>
	<h2>Add Products</h2>

	<div class="inputsGroup w-100 d-flex justify-content-around">
		<div class="form-group w-50 px-3 mb-4 mt-3">
			<label for="name">Name</label>
			<input class="form-control" type="text" name="name" id="name" placeholder="Name..." required />
		</div>

		<div class="form-group w-50 px-3 mb-4 mt-3">
			<label for="description">Description</label>
			<input
				class="form-control"
				type="text"
				name="description"
				id="description"
				placeholder="Description..."
				required
			/>
		</div>
	</div>

	<div class="inputsGroup w-100 d-flex justify-content-around">
		<div class="form-group w-50 px-3 mb-4">
			<label for="code">Code</label>
			<input class="form-control" type="number" name="code" id="code" placeholder="Code..." required />
		</div>

		<div class="form-group w-50 px-3 mb-4">
			<label for="imgURL">Image URL</label>
			<input class="form-control" type="url" name="imgURL" id="imgURL" placeholder="Url..." required />
		</div>
	</div>

	<div class="inputsGroup w-100 d-flex justify-content-around">
		<div class="form-group w-50 px-3 mb-4">
			<label for="price">Price</label>
			<input class="form-control" type="number" name="price" id="price" placeholder="Price..." required />
		</div>

		<div class="form-group w-50 px-3 mb-4">
			<label for="stock">Stock</label>
			<input class="form-control" type="number" name="stock" id="stock" placeholder="Stock..." required />
		</div>
	</div>

	<div class="d-flex justify-content-center mt-3">
		<button class="btn btn-primary" type="submit">Add Product</button>
	</div>
</form>
