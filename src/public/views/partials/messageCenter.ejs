<div class="messageCenter w-100 d-flex flex-column justify-content-start align-items-center">
	<div class="form-group w-100 mb-4 border-bottom border-light pb-2">
		<label for="email">Email</label>
		<input class="form-control" type="email" id="email" placeholder="myname@mail.com" />
	</div>

	<div class="chat w-100 border border-light p-2">
		<% if (messages && messages.length > 0) { %> <% messages.forEach(message => { %>

		<li class="d-flex w-100 mb-3">
			<div class="messageInfo w-25">
				<p class="email"><b><%= message.email %></b></p>
				<p class="date"><%= message.date %></p>
			</div>
			<p class="message w-75"><i><%= message.message %></i></p>
		</li>

		<%})%> <% }else{%>
		<h3 class="text-center m-3">There aren't messages...</h3>
		<% }%>
	</div>

	<div class="sendMessage w-100 d-flex justify-content-between align-items-end my-4">
		<div class="form-group w-50">
			<label for="message">Message</label>
			<input class="form-control" type="message" id="message" placeholder="This is my message." />
		</div>

		<button class="sendButton w-25 btn btn-primary">Send</button>
	</div>
</div>
